{
    "$schema":"https://developer.microsoft.com/json-schemas/sp/v2/row-formatting.schema.json",
    "hideSelection":true,
    "hideColumnHeader":true,
    "hideListHeader":true,
    "rowFormatter":{
       "elmType":"div",
       "attributes":{
          "class":"ms-bgColor-gray10"
       },
       "style":{
          "justify-content":"start",
          "color":"ms-fontColor-Primary",
          "display":"flex",
          "padding":"5px 15px 5px 16px",
          "border-radius":"5px",
          "margin":"0px 10px 10px 10px",
          "width":"700px",
          "flex-direction":"column",
          "background-color":"white"
       },
       "children":[
          {
             "elmType":"div",
             "style":{
                "text-align":"left",
                "font-weight":"400",
                "font-size":"12px",
                "width":"700px"
             },
             "children":[
                {
                   "elmType":"div",
                   "txtContent":"User 1",
                   "style":{
                      "font-size":"12px",
                      "font-weight":"bold",
                      "margin-bottom":"5px"
                   }
                },
                {
                   "elmType":"div",
                   "attributes":{
                      "class":"sp-row-listPadding"
                   },
                   "txtContent":"[$Title]",
                   "style":{
                      "font-size":"14px",
                      "font-weight":"400",
                      "flex-grow":"1",
                      "display":"flex",
                      "flex-direction":"column",
                      "flex-wrap":"nowrap",
                      "align-items":"left",
                      "margin-top":"5px",
                      "margin-bottom":"5px",
                      "width":"400px",
                      "padding":"20px 10px 20px 20px",
                      "background-color":"#d8d8d8",
                      "border-radius":"20px"
                   }
                },
                {
                   "elmType":"div",
                   "txtContent":"User 2",
                   "style":{
                      "font-size":"12px",
                      "font-weight":"bold",
                      "margin-bottom":"5px",
                      "margin-right":"-15px",
                      "text-align":"right"
                   }
                },
                {
                   "elmType":"div",
                   "attributes":{
                      "class":"sp-row-listPadding"
                   },
                   "txtContent":"[$Answer]",
                   "style":{
                      "font-size":"14px",
                      "font-weight":"400",
                      "flex-grow":"1",
                      "display":"flex",
                      "flex-direction":"column",
                      "flex-wrap":"nowrap",
                      "align-items":"flex-end",
                      "margin-top":"5px",
                      "margin-bottom":"5px",
                      "margin-left":"295px",
                      "margin-right":"5px",
                      "max-width":"390px",
                      "width":"400px",
                      "padding":"20px 10px 20px 20px",
                      "background-color":"#218aff",
                      "color":"#fdfdfd",
                      "border-radius":"20px"
                   }
                }
             ]
          }
       ]
    }
 }
